# ==============================================
# Ad Grant AI - Environment Configuration
# ==============================================

# Server Configuration
BASE_URL=https://adgrant.ai/api/v1
PORT=3000
API_V1_PREFIX=/api/v1
NODE_ENV=development

# ==============================================
# Azure OpenAI Configuration
# ==============================================
MODEL_NAME=gpt-4o
AZURE_OPENAI_API_KEY=your_azure_openai_api_key_here
AZURE_OPENAI_API_INSTANCE_NAME=your-instance-name
AZURE_OPENAI_API_DEPLOYMENT_NAME=gpt-4o
AZURE_OPENAI_API_VERSION=2024-02-15-preview

# ==============================================
# Authentication & Security
# ==============================================
JWT_SECRET=your_jwt_secret_here
ALGORITHM=HS256
ACCESS_TOKEN_EXPIRE_MINUTES=30

# ==============================================
# Rate Limiting
# ==============================================
RATE_LIMIT_PER_HOUR=100
PAID_RATE_LIMIT_PER_HOUR=1000


# ==============================================
# Admin Configuration
# ==============================================
ADMIN_USER_NAME=admin@yourdomain.com
ADMIN_USER_PASSWORD=your_admin_password_here

# ==============================================
# Unipile/LinkedIn Integration
# ==============================================
ACCOUNT_ID=your_account_id_here
UNIPILE_BASE_URL=https://api1.unipile.com:13153
UNIPILE_ACCESS_TOKEN=your_unipile_access_token_here
WEB_HOOK_URL=https://yourdomain.com/api/v1/webhook
COMPANY_MAILBOX_ID=107697030
LINKEDIN_COMPANY_NAME=ad-grant-ai

# ==============================================
# Email Service Configuration
# ==============================================
# Google Workspace Configuration (RECOMMENDED for adgrant.ai)
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_SECURE=false
SMTP_USER=noreply@adgrant.ai
SMTP_PASS=your_workspace_app_password_here
SMTP_FROM=noreply@adgrant.ai

# Alternative Google Workspace Configuration (SSL - Port 465)
# SMTP_HOST=smtp.gmail.com
# SMTP_PORT=465
# SMTP_SECURE=true
# SMTP_USER=noreply@adgrant.ai
# SMTP_PASS=your_workspace_app_password_here
# SMTP_FROM=noreply@adgrant.ai

# Personal Gmail Configuration (Fallback)
# SMTP_HOST=smtp.gmail.com
# SMTP_PORT=587
# SMTP_SECURE=false
# SMTP_USER=your_email@gmail.com
# SMTP_PASS=your_16_digit_app_password_here
# SMTP_FROM=your_email@gmail.com


# ==============================================
# External APIs
# ==============================================
JINJA_API_KEY=your_jinja_api_key_here
