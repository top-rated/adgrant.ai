# Server Configuration
BASE_URL=http://localhost:3000/api/v1
PORT=3000
API_V1_PREFIX=/api/v1
NODE_ENV=development

# ==============================================
# Azure OpenAI Configuration
# ==============================================
MODEL_NAME=gpt-4o
AZURE_OPENAI_API_KEY=your_azure_openai_api_key_here
